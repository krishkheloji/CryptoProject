  "components": {
    "schemas": {
      "AddFavoriteRequest": {
        "required": [
          "coinId",
          "coinName",
          "symbol"
        ],
        "type": "object",
        "properties": {
          "coinId": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "symbol": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "coinName": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "BuyAssetRequest": {
        "required": [
          "coinId",
          "coinName",
          "quantity",
          "symbol"
        ],
        "type": "object",
        "properties": {
          "coinId": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "symbol": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "coinName": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "format": "double"
          },
          "notes": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
